<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_launcher_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/id"
                android:layout_width="15dp"
                android:layout_height="48dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/rectagle"
                android:gravity="center_vertical|center"
                android:text="17888870"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TUCO SAZON SALSA FRASCO X 70 GRS"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:translationX="2dp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tienda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:text="Emmel"
                android:lineBreakStyle="loose"
                android:textColor="@color/grey"
                android:textSize="8sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="2023-05-17"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:textSize="9sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/diferencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="36dp"
            android:imeOptions="actionNext"
            android:text="70"
            android:layout_marginEnd="70dp"
            android:textColor="#A10404"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/txtpedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:imeOptions="actionNext"
            android:text="pedido"
            android:layout_marginEnd="70dp"
            android:textColor="#A10404"
            android:textSize="8sp"
            android:layout_alignParentRight="true"
            />


        <TextView
            android:id="@+id/txtinventario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:imeOptions="actionNext"
            android:text="inventario"
            android:layout_marginEnd="17dp"
            android:textColor="#42A34F"
            android:textSize="8sp"
            android:layout_alignParentRight="true"
            />


        <TextView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="70dp"
            android:imeOptions="actionNext"
            android:text="|"
            android:textColor="#13C6DD"
            android:textSize="30sp"

            android:translationX="15dp" />


        <TextView
            android:id="@+id/stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:text="100"
            android:textColor="#042203"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            />



    </RelativeLayout>

</LinearLayout>


